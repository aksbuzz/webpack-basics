{
  "rules": {
    "prefer-template": "off",
    "no-var": "warn",
    "no-unused-vars": "warn",
    "camelcase": "warn",
    "no-console": "warn",
    "no-template-curly-in-string": "warn",
    "no-nested-ternary": "warn",
    "no-self-compare": "warn",
    "arrow-body-style": "warn",
    "import/prefer-default-export": "off",
    "import/no-extraneous-dependencies": ["off", { "devDependencies": false }]
  },
  "ignorePatterns": ["dist", "node_modules", "webpack.*", "webpack/paths.js"],
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack/webpack.common.js"
      }
    }
  }
}
